{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://linkern.onrender.com/api/$1"
    },
    {
      "source": "/l/:shortId",
      "destination": "https://linkern.onrender.com/l/:shortId"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
